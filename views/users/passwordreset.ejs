<section>
    <div class="container">

        <h1 style="color: aliceblue;">Password Reset</h1>

       

        <form action="" method="post">
            <div class="mb-3">
                <input type="email" class="form-control " name="email" placeholder="Enter Email Id" value="<%=user.email %>" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="oldpassword" placeholder="Enter New Password" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="newpassword" placeholder="Re-enter New Password" required>
            </div>
            <input type="hidden" name="id" value="<%=user._id%>">
            <button style="margin-left: 30px;" type="submit" class="btn btn-success btn-block">Reset Password</button>
        </form>
        <br>
        <a href="/user/home"><input type="submit" class="btn btn-primary  " value="Goto Back"></a>   
    </div>

</section>


