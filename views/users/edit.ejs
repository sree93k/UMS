<%- include("../layouts/user/userheader.ejs")%>
<section>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Programmers Club</a>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <a class="nav-link active" aria-current="page" href="/user/home">Home</a>
              </div>
            </div>
          </nav>
    </header>
    </section>
<section>
<section>
    <div class="container">
        <h1 style="color: aliceblue;">Update <%= user.name %> </h1>

        <img src="userImages/<%=user.image %>" width="100px" height="100px" alt="<% user.image %>">

        <form action="" method="post" enctype="multipart/form-data">
            <input type="file" class="form-control mb-3" name="image">
            <input type="hidden" name="user_id" value="<%=user._id%>">
            <input type="text" class="form-control mb-3" name="name" value="<%=user.name%>" placeholder="Enter Name" required>
            <input type="email" class="form-control mb-3" name="email" value="<%=user.email%>" placeholder="Enter Email" required>
            <input type="text" class="form-control mb-3" name="mobile" value="<%=user.mobile%>" placeholder="Enter Mobile" required>
            <input style="margin-left: 110px;" type="submit" class="btn btn-success" value="Update Profile">
        </form>
        <br><br>

        <a href="/user/passwordreset?id=<%=user._id%>"><input type="submit" class="btn btn-primary " value="Need to change password ?"></a>


        <br>

        <a href="/user/home">Goto Back</a>
    </div>
</section>
<%- include("../layouts/footer")%>